{
  "name": "gcdrb",
  "version": "0.0.0",
  "description": "GC Digital Research Bootcamp",
  "homepage": "gcdigitalfellows.github.io",
  "author": {
    "name": "GC Digital Fellows",
    "email": "gc.digitalfellows@gmail.com"
  },
  "sass_includes": "./bower_components/bootstrap/scss",
  "license": "GPL-3.0",
  "devDependencies": {
    "autoprefixer": "^6.3.1",
    "babel-core": "^6.4.5",
    "babel-eslint": "^4.1.4",
    "babel-preset-es2015": "^6.3.13",
    "babyparse": "^0.4.3",
    "bower": "^1.7.4",
    "browser-sync": "^2.11.1",
    "browserify": "^13.0.0",
    "buildify": "^0.4.0",
    "del": "^2.2.0",
    "eslint": "^1.10.3",
    "eslint-config-xo": "^0.7.1",
    "eslint-config-xo-space": "^0.6.1",
    "fs": "0.0.2",
    "js-yaml": "^3.5.2",
    "live-reload": "^1.1.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.4.2",
    "parallelshell": "^2.0.0",
    "request": "^2.67.0",
    "rimraf": "^2.5.2",
    "shelljs": "^0.5.1",
    "stream-series": "^0.1.1",
    "uglify-js": "^2.6.2",
    "watch-run": "^1.2.4",
    "yargs": "^3.32.0"
  },
  "scripts": {
    "clean": "npm run clean:scripts -s && npm run clean:styles -s",
    "clean:temp": "rimraf .tmp",
    "clean:scripts": "rimraf assets/javascript/*.min.js",
    "clean:styles": "rimraf assets/css/*",
    "data": "",
    "assets": "npm run clean && npm run styles && npm run scripts && npm run fonts && npm run images",
    "jekyll": "",
    "prescripts": "mkdirp .tmp/js",
    "lint": "eslint assets/javascript/main.js",
    "scripts": "npm run scripts:main && npm run scripts:vendor",
    "scripts:main": "browserify assets/javascript/main.js > .tmp/js/main.js && uglifyjs .tmp/js/main.js > assets/javascript/main.min.js",
    "scripts:vendor": "node build_vendor_js.js",
    "prestyles": "mkdirp assets/css",
    "styles": "node-sass --output-style compressed --include-path $npm_package_sass_includes --follow assets/scss/style.scss > assets/css/style.css",
    "styles:vendor": "mkdirp assets/css && node-sass --output-style compressed ---include-path bower_components --follow assets/scss/vendor.scss > assets/css/vendor.css",
    "watch": "parallelshell \"npm run watch:scripts -s\" \"npm run watch:styles -s\" \"npm run watch:build\"",
    "watch:scripts": "watch-run -p 'assets/javascript/*.js' npm run lint && npm run scripts",
    "watch:styles": "watch-run -p 'assets/scss/**/*.scss,assets/scss/**/*.sass' npm run styles",
    "watch:build": "watch-run 'npm run build' . --wait=10",
    "livereload": "live-reload --port 9091 ./",
    "serve": "parallelshell \"npm run livereload -s\" \"npm run serve -s\" \"npm run watch -s\" \"opener http://localhost:9090\""
  }
}
