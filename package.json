{
  "name": "gcdrb",
  "version": "1.2.1",
  "description": "GC Digital Research Bootcamp",
  "homepage": "http://gcdigitalfellows.github.io",
  "author": {
    "name": "GC Digital Fellows",
    "email": "gc.digitalfellows@gmail.com"
  },
  "sass_includes": "./bower_components/bootstrap/scss",
  "font_list": "bower_components/font-awesome/fonts/* bower_components/font-mfizz/fonts/*",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/gcdigitalfellows/gcdrb.git"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.1",
    "babel-core": "^6.4.5",
    "babel-eslint": "^4.1.4",
    "babel-preset-es2015": "^6.3.13",
    "babyparse": "^0.4.3",
    "bower": "^1.7.4",
    "browser-sync": "^2.11.1",
    "browserify": "^13.0.0",
    "buildify": "^0.4.0",
    "copyfiles": "^0.2.1",
    "del": "^2.2.0",
    "eslint": "^1.10.3",
    "eslint-config-xo": "^0.7.1",
    "eslint-config-xo-space": "^0.6.1",
    "fs": "0.0.2",
    "js-yaml": "^3.5.2",
    "live-reload": "^1.1.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.4.2",
    "opener": "^1.4.1",
    "parallelshell": "^2.0.0",
    "request": "^2.67.0",
    "rimraf": "^2.5.2",
    "shelljs": "^0.5.1",
    "stream-series": "^0.1.1",
    "uglify-js": "^2.6.2",
    "watch-run": "^1.2.4",
    "yargs": "^3.32.0"
  },
  "scripts": {
    "clean": "npm run clean:scripts -s && npm run clean:styles -s",
    "clean:temp": "rimraf _site",
    "clean:scripts": "rimraf assets/javascript/*.min.js",
    "clean:styles": "rimraf assets/css/*",
    "data": "",
    "assets": "parallelshell \"npm run styles\" \"npm run scripts\" \"npm run fonts\"",
    "fonts": "copyfiles -f $npm_package_font_list assets/fonts",
    "prejekyll": "mkdirp _site",
    "jekyll": "jekyll build",
    "prescripts": "mkdirp _site/js",
    "lint": "eslint assets/javascript/main.js",
    "scripts": "parallelshell \"npm run scripts:main\" \"npm run scripts:vendor\"",
    "scripts:main": "browserify assets/javascript/main.js > _site/js/main.js && uglifyjs _site/js/main.js > assets/javascript/main.min.js",
    "scripts:watch": "browserify assets/javascript/main.js > _site/js/main.js && uglifyjs _site/js/main.js > _site/assets/javascript/main.min.js",
    "scripts:vendor": "node build_vendor.js js",
    "prestyles": "mkdirp assets/css",
    "styles": "parallelshell \"npm run styles:main\" \"npm run styles:vendor\"",
    "styles:main": "node-sass --output-style compressed --include-path $npm_package_sass_includes --follow assets/scss/style.scss > assets/css/style.min.css",
    "styles:watch": "node-sass --output-style compressed --include-path $npm_package_sass_includes --follow assets/scss/style.scss > _site/assets/css/style.min.css",
    "styles:vendor": "node build_vendor.js css",
    "watch": "parallelshell \"npm run watch:scripts -s\" \"npm run watch:styles -s\"",
    "watch:scripts": "watch-run -p 'assets/javascript/*.js' npm run lint && npm run scripts:watch",
    "watch:styles": "watch-run -p 'assets/scss/**/*.{scss,sass}' npm run styles:watch",
    "watch:jekyll": "watch-run -p '*.{html,md},_includes/*.{html,md},assets/images/*,_data/*' npm run jekyll",
    "build": "jekyll serve --port 9090 --no-watch",
    "livereload": "live-reload --port 9091 _site/",
    "serve": "npm run assets && parallelshell \"npm run build\" \"npm run livereload\" \"npm run watch:scripts\" \"npm run watch:styles\" \"npm run watch:jekyll\""
  }
}
